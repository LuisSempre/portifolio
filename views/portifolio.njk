{% extends "layout.njk" %}

{% block head%}

    <title>Portifolio - Luis Lucas</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Aulas</h1>
    </div>
    <section class="cards">
        {% for item in itens%}
            <div class="card" id="{{item.id}}">
                <div class="card_image-container">
                    <img src="https://i1.ytimg.com/vi/{{item.id}}/default.jpg" alt="imagem de {{item.title}}">
                </div>
                <div class="card_container">
                    <p>{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p>{{item.title}}/p>
                        <p class="card_price">Free</p>
                    </div>
                </div>

                {% endfor%}

                <div class="modal-overlay active">
                    <div class="modal">

                        <a class="close-modal">
                            <i class="material-icons">close</i>
                        </a>

                        <div class="modal-content">
                            <iframe src="" frameborder="0"></iframe>
                        </div>
                    </div>
                </div>
                <script src="scripts.js"></script>

            {% endblock %}